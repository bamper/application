{% extends '::layout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-3">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'searchForm'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_widget(form.minimumRank, {'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.maximumRank, {'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.type, {'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_row(form.Search, {'attr': {'class': 'btn btn-default btn-block '}}) }}
            </div>

            {{ form_rest(form) }}
            {{ form_end(form)}}
        </div>
        <div class="col-md-9" id="players">

        </div>
    </div>
{% endblock %}
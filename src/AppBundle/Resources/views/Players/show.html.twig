{% extends '::layout.html.twig' %}

{% block content %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'searchForm'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_widget(form.minimumRank, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.maximumRank, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.type, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_row(form.Search, {'attr': {'class': 'btn btn-default'}}) }}
    </div>

    {{ form_rest(form) }}

    <hr>

    <div id="players">
        <!-- here comes ajax request response data !-->
    </div>
{% endblock %}
{% extends '::layout.html.twig' %}

{% block content %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'postForm'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.note, 'Leave a short note', ) }}
        {{ form_widget(form.note, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.type, 'What are you looking for?') }}
        {{ form_widget(form.type, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Create" id="post_Create">
    </div>

    {{ form_end(form) }}
{% endblock %}
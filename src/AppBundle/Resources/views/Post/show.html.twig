{% extends '::layout.html.twig' %}

{% block content %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'postEditForm'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.note, 'Leave a short note') }}
        {{ form_widget(form.note, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.type, 'What are you looking for?') }}
        {{ form_widget(form.type, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Zapisz" id="post_Create">
        <a type="button" href="{{ path('dashboard_post_delete', {'id': app.user.post.id}) }}" class="btn btn-danger">Usu≈Ñ</a>
    </div>

    {{ form_rest(form) }}

    {{ form_end(form) }}
{% endblock %}
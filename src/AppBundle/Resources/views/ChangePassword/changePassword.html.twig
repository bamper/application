{% extends '::layout.html.twig' %}

{% block content %}

    {% if error != null %}
        <p>{{ error }}</p>
    {% endif %}


    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <form action="{{ path('user_profile_change_password') }}" {{ form_enctype(form) }} method="POST">
        {{ form_row(form.oldPassword) }}
        {{ form_row(form.newPassword.password) }}
        {{ form_row(form.newPassword.confirm) }}
        <div>
            <input type="submit" value="Zmień hasło" />
        </div>
        {{ form_row(form._token) }}
    </form>

{% endblock %}
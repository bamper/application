{% extends '::layout.html.twig' %}

{% block content %}

 {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'registrationForm'}}) }}
        {{ form_errors(form) }}

    <div class="form-group">
        {{ form_widget(form.user.username, {'attr': {'placeholder': 'Username', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.user.email, {'attr': {'placeholder': 'E-mail', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.user.password.password, {'attr': {'placeholder': 'Password', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.user.password.confirm, {'attr': {'placeholder': 'Retype password', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_row(form.Register, {'attr': {'class': 'btn btn-default'}}) }}
    </div>

    {{ form_end(form) }}

{% endblock %}